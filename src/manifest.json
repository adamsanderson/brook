{
  "manifest_version": 2,
  "name": "Brook Feed Reader",
  "version": "0.5.1",
  "author": "Adam Sanderson <netghost@gmail.com>",
  
  "sidebar_action": {
    "browser_style": true,
    "default_icon": {
      "96": "icons/Brook.svg",
      "48": "icons/Brook.svg"
    },
    "default_title": "Brook",
    "default_panel": "src/Sidebar/index.html"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "96": "icons/Brook.svg",
      "48": "icons/Brook.svg"
    },
    "default_title": "Brook"
  },

  "background": {
    "page": "src/background/index.html"
  },

  "options_ui": {
    "page": "src/Options/index.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],

  "permissions": [
    "<all_urls>",
    "storage",
    "unlimitedStorage"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{e22ef003-e424-45f0-9da1-b0b93617ce49}"
    }
  }
}
