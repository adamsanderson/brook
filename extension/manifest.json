{
  "manifest_version": 2,
  "name": "Brook Feed Reader",
  "version": "0.3.2",
  "author": "Adam Sanderson <netghost@gmail.com>",
  
  "sidebar_action": {
    "browser_style": true,
    "default_icon": {
      "96": "images/Brook.svg",
      "48": "images/Brook.svg"
    },
    "default_title": "Brook",
    "default_panel": "sidebar.html"
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "96": "images/Brook.svg",
      "48": "images/Brook.svg"
    },
    "default_title": "Brook"
  },

  "background": {
    "page": "background.html"
  },

  "options_ui": {
    "page": "options.html"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["dist/shared.js", "dist/content.js"]
    }
  ],

  "permissions": [
    "<all_urls>",
    "storage",
    "unlimitedStorage",
    "tabs"
  ]
}
